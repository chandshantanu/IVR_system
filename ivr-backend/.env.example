# Application
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://ivr_user:ivr_password_change_in_production@localhost:5432/ivr_system

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=change_this_secret_in_production_use_strong_random_string
JWT_EXPIRES_IN=3600
JWT_REFRESH_SECRET=change_this_refresh_secret_in_production
JWT_REFRESH_EXPIRES_IN=604800

# Exotel Configuration
EXOTEL_API_KEY=your_exotel_api_key
EXOTEL_API_SECRET=your_exotel_api_secret
EXOTEL_SID=your_exotel_sid
EXOTEL_BASE_URL=https://api.exotel.com
EXOTEL_FROM_NUMBER=your_exotel_phone_number
EXOTEL_CALLER_ID=your_exotel_caller_id
EXOTEL_REGION=sg  # 'sg' for Singapore, 'in' for Mumbai/India

# Exotel Monitoring Configuration
EXOTEL_HEARTBEAT_ENABLED=true
EXOTEL_SYNC_ENABLED=true
EXOTEL_SYNC_INTERVAL_MINUTES=15

# NGROK (for local development webhooks)
NGROK_URL=your_ngrok_url

# Logging
LOG_LEVEL=debug
