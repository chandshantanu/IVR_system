        {
          "name": "Create an App",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "let response = pm.response.json();",
                  "pm.environment.set(\"AppId\", response.AppID);",
                  "pm.environment.set(\"AppSecret\", response.AppSecret);"
                ],
                "type": "text/javascript",
                "packages": {}
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "{{CustomerAuthCode}}",
                "description": "data value provided by customer token API"
              }
